@model ChickenFlickFilmApplication.Models.MovieUserViewModel
@using System.Globalization;
@{
    Layout = "_Layout";
    var m = Model;

    var byDate = Model.Showtimes
        .GroupBy(s => new { s.ShowDate, s.DayOfWeek })
        .OrderBy(g => DateTime.ParseExact(g.Key.ShowDate, "dd/MM/yyyy", CultureInfo.InvariantCulture))
        .Take(3)  // chỉ 3 ngày đầu
        .ToList();

    var firstKey = byDate.FirstOrDefault()?.Key;
}
<div class="detail-hero">
    <div class="hero-inner">
        <img src="@m.BannerUrl" alt="@m.Title" class="hero-img" />
        <button class="btn-play" data-bs-toggle="modal" data-bs-target="#trailerModal">
            <i class="bi bi-play-fill"></i>
        </button>
    </div>
</div>

<div class="container position-relative">
    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="movie-info-wrapper">
                <!-- Movie Poster -->
                <div class="poster-container">
                    <img src="@m.PosterUrl" alt="@m.Title" class="movie-poster">
                </div>

                <!-- Movie Info -->
                <div class="movie-info">
                    <h5 class="movie-title">@m.Title</h5>
                    <div class="d-flex gap-4 mb-3 text-secondary small">
                        <div>
                            <i class="bi bi-clock" style="color: #D84040;"></i> @m.Duration
                        </div>
                        <div>
                            <i class="bi bi-calendar" style="color: #D84040;"></i> @m.ReleaseDate.ToString("dd/MM/yyyy") - @m.EndDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-star-fill star-filled me-1"></i>
                            <span class="fs-4 fw-bold text-warning">@m.Rating</span>
                        </div>
                    </div>
                    <div class="movie-details">
                        <div class="info">
                            <span class="label">Thể loại:</span>
                            @if (!string.IsNullOrEmpty(Model.Genre))
                            {
                                foreach (var g in Model.Genre.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="tag">@g.Trim()</span>
                                }
                            }
                        </div>
                        <div class="info">
                            <span class="label">Đạo diễn:</span>
                            @if (!string.IsNullOrEmpty(Model.Director))
                            {
                                foreach (var g in Model.Director.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="tag">@g.Trim()</span>
                                }
                            }
                        </div>
                        <div class="info">
                            <span class="label">Diễn viên:</span>
                            @if (Model.Cast != null && Model.Cast.Any())
                            {
                                <div class="actor-list">
                                    @foreach (var actor in Model.Cast.Split(';', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="actor-box">@actor.Trim()</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>


            <div class="mb-4">
                <div class="card-body">
                    <h6 class="section-title mb-4">Nội Dung Phim</h6>

                    <div class="text-secondary">
                        <p class="mb-3">
                            Phim mới <strong>@m.Title</strong> @m.Description
                        </p>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <div class="card-body">
                    <h6 class="section-title mb-4">Lịch Chiếu</h6>

                    <div class="d-flex gap-2 mb-4 justify-content align-items-center">
                        @foreach (var showtime in Model.Showtimes)
                        {
                            <button class="btn btn-primary px-3 py-2" data-date="@showtime.ShowDate">
                                <div class="text-center">
                                    <div class="small">@showtime.ShowDate</div>
                                    <div class="fw-bold">@showtime.DayOfWeek</div>
                                </div>
                            </button>
                        }
                    </div>


                    @foreach (var showtime in Model.Showtimes)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <h5 class="mb-3">Galaxy Đà Nẵng</h5>
                            <div class="d-flex align-items-center gap-3">
                                <span class="badge bg-light text-dark">@showtime.Format</span>
                                <button class="btn btn-outline-primary btn-sm">@showtime.ShowTime</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Sidebar -->
        @* <div class="col-lg-4 d-none d-lg-block">
            <div class="mt-4">
                <div class="card-body">
                    <h6 class="section-title mb-4">PHIM ĐANG CHIẾU</h6>

                    <!-- Movie 1 -->
                    <div class="mb-3 sidebar-movie-card">
                        <div class="sidebar-movie-image">
                            <img src="/image/bannerdieuuoccuoicung.jpg" class="img-fluid w-100"
                                 alt="Thế Giới Khủng Long: Tái Sinh" />
                            <div class="position-absolute bottom-0 end-0 m-2">
                                <span class="badge age-badge">T13</span>
                            </div>
                            <button class="btn btn-sm buy-ticket-btn position-absolute top-50 start-50 translate-middle m-2">
                                <i class="bi bi-ticket-perforated me-1"></i> Mua vé
                            </button>
                        </div>
                        <div class="card-body p-2">
                            <h5 class="card-title fs-6 mb-0">Thế Giới Khủng Long: Tái Sinh</h5>
                        </div>
                    </div>
                    <div class="text-end">
                        <button class="btn custom-btn">
                            Xem thêm <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div> *@
    </div>
</div>

<div class="modal fade" id="trailerModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="true"
     data-bs-keyboard="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0">
                <div class="ratio ratio-16x9">
                    <iframe id="trailerFrame" src="https://www.youtube.com/embed/VhY3F96vv3M?autoplay=0"
                            title="Trailer Điều Ước Cuối Cùng" allow="autoplay; encrypted-media" allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
      const trailerModalEl = document.getElementById('trailerModal');
      const iframe = document.getElementById('trailerFrame');
      const baseSrc = iframe.src.replace(/[?&]autoplay=\d*/, '');

      trailerModalEl.addEventListener('show.bs.modal', () => {
        iframe.src = baseSrc + '?autoplay=1';
      });

      trailerModalEl.addEventListener('hidden.bs.modal', () => {
        iframe.src = baseSrc;
      });
    });
</script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@section Styles {
    <link rel="stylesheet" href="~/css/DetailFilm.css">
}