@model BusinessObjects.Models.Movie
<form asp-action="DeleteConfirmedMovie" asp-controller="Admin" asp-route-id="@Model.MovieId" method="post">
    <input type="hidden" asp-for="MovieId" />
    <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa phim?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <p>Xóa vĩnh viễn phim <strong>@Model.Title</strong>?</p>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>
