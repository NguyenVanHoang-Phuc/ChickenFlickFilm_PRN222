@model BusinessObjects.Models.Movie

<form asp-action="@ViewData["Action"]" method="post" enctype="multipart/form-data">
    <div class="modal-header">
        <h5 class="modal-title">@ViewData["Title"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <!-- User ID, thường không hiển thị cho người dùng -->
        <input type="hidden" asp-for="MovieId" />

        <!-- Full Name -->
        <div class="form-group">
            <label class="form-label">Tên phim:</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Poster:</label>
            <input type="file" asp-for="PosterFile" class="form-control" />
            <img src="@Model.PosterUrl" class="mt-2" style="max-height: 100px;" />
        </div>

        <div class="form-group">
            <label class="form-label">Banner:</label>
            <input type="file" asp-for="BannerFile" class="form-control" />
            <img src="@Model.BannerUrl" class="mt-2" style="max-height: 100px;" />
        </div>

        <div class="form-group">
            <label class="form-label">Đạo diễn:</label>
            <input asp-for="Director" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Diễn viên:</label>
            <input asp-for="Cast" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Thể loại:</label>
            <input asp-for="Genre" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Giới hạn độ tuổi:</label>
            <input asp-for="AgeRating" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Định dạng:</label>
            <select asp-for="Format" class="form-control">
                <option value="2D">2D</option>
                <option value="3D">3D</option>
                <option value="IMAX">IMAX</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Ngôn ngữ:</label>
            <select asp-for="Language" class="form-control">
                <option value="Phụ đề">Phụ đề</option>
                <option value="Thuyết minh">Thuyết minh</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Thời gian(phút):</label>
            <input asp-for="Duration" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Ngày khởi chiếu:</label>
            <input asp-for="ReleaseDate" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label class="form-label">Ngày kết thúc:</label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label class="form-label">Đánh giá(thang điểm 10):</label>
            <input asp-for="Rating" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Quốc gia:</label>
            <input asp-for="Country" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Mô tả:</label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">TrailerURL:</label>
            <input asp-for="TrailerUrl" class="form-control" />
        </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>
