@model BusinessObjects.Models.Theater

<form asp-action="@ViewData["Action"]" method="post">
    <div class="modal-header">
        <h5 class="modal-title">@ViewData["Title"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="TheaterId" />

        <div class="form-group">
            <label class="form-label">Tên rạp:</label>
            <input asp-for="TheaterName" class="form-control" />
            <span asp-validation-for="TheaterName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Link bản đồ (Map URL):</label>
            <input asp-for="MapUrl" class="form-control" />
            <span asp-validation-for="MapUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Địa chỉ:</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Tổng số phòng chiếu:</label>
            <input asp-for="TotalTheaters" class="form-control" />
            <span asp-validation-for="TotalTheaters" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>
