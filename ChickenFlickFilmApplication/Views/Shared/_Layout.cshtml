<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChickenFlickFilmApplication</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/HeaderUser.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @RenderSection("Styles", false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark shadow-sm" id="header">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/image/chicken_circle.png" alt="Logo" width="80" />
                </a>

                <a href="/dat-ve.html" class="btn btn-ticket me-3">Mua Vé</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-3 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Phim</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-controller="MoviesUser" asp-action="ListFilm" asp-fragment="now" class="dropdown-item">
                                        Phim đang chiếu
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="MoviesUser" asp-action="ListFilm" asp-fragment="soon" class="dropdown-item">
                                        Phim sắp chiếu
                                    </a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Rạp/Giá Vé</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item load-page" href="#" data-page="">An Dương Vương</a>
                                </li>
                                <li><a class="dropdown-item load-page" href="#" data-page="">Quang Trung</a></li>
                                <li>
                                    <a class="dropdown-item load-page" href="#" data-page="">Nha Trang</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/thong-bao.html">Thông báo</a>
                        </li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="search-login">
                            <form class="d-flex" role="search">
                                <input class="form-control form-control-sm me-2" type="search" placeholder="Tìm kiếm" />
                            </form>
                            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">Đăng Nhập</a>
                            <a href="@Url.Action("Signup", "Auth")" class="text-decoration-none">Đăng ký</a>
                        </div>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <div class="search-login">
                            <form class="d-flex" role="search">
                                <input class="form-control form-control-sm me-2" type="search" placeholder="Tìm kiếm" />
                            </form>
                            <a href="@Url.Action("UserProfile", "Auth")" class="text-decoration-none">Profile</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    @Html.Partial("_Footer")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
