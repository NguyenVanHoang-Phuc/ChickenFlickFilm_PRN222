<!-- Add Auditorium Modal -->
<div id="addAuditoriumModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Thêm Auditorium mới</h2>
        </div>
        <form>
            <div class="form-group">
                <label class="form-label">Rạp chiếu</label>
                <select class="form-control form-select" required>
                    <option value="">Chọn rạp</option>
                    <option value="1">CGV Vincom Center</option>
                    <option value="2">CGV Landmark 81</option>
                    <option value="3">Lotte Cinema Diamond</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Tên phòng</label>
                <input type="text" class="form-control" placeholder="VD: Phòng A1" required>
            </div>
            <div class="form-group">
                <label class="form-label">Loại phòng</label>
                <select class="form-control form-select">
                    <option value="2D">2D</option>
                    <option value="3D">3D</option>
                    <option value="IMAX">IMAX</option>
                </select>
            </div>
            <div class="grid grid-cols-2" style="gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Số hàng</label>
                    <input type="number" min="1" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Số cột</label>
                    <input type="number" min="1" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Tổng số ghế</label>
                <input type="number" min="1" class="form-control" required>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideModal('addAuditoriumModal')">Hủy</button>
                <button type="submit" class="btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>
