@model X.PagedList.IPagedList<BusinessObjects.Models.Theater>
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Quản lý Theaters";
    Layout = "_LayoutAdmin";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Quản lý Theaters</h1>
        <p class="page-subtitle">Quản lý thông tin rạp chiếu phim</p>
    </div>
    <button class="btn-primary" onclick="showModal('addTheaterModal')">
        <i class="fas fa-plus"></i>
        Thêm Theater
    </button>
</div>

<!-- Search -->
<div class="admin-card">
    <div class="search-container">
        <i class="fas fa-search search-icon"></i>
        <input type="text" class="form-control search-input" placeholder="Tìm kiếm theo tên rạp hoặc địa chỉ...">
    </div>
</div>

<!-- Theaters Grid -->
<div class="grid grid-cols-3 mb-3">
    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon" style="width: 48px; height: 48px; margin-right: 1rem;">
                    <i class="fas fa-building"></i>
                </div>
                <div>
                    <h3 style="font-size: 1.125rem; font-weight: 600; color: var(--primary-dark); margin-bottom: 0.25rem;">CGV Vincom Center</h3>
                    <p style="font-size: 0.875rem; color: var(--text-light); margin: 0;">ID: 1</p>
                </div>
            </div>
            <div class="action-buttons">
                <button class="action-btn view" title="Xem">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="action-btn edit" title="Sửa">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="action-btn delete" title="Xóa">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>

        <div style="margin-bottom: 1rem;">
            <div class="d-flex align-items-start mb-2">
                <i class="fas fa-map-marker-alt" style="color: var(--text-light); margin-top: 0.25rem; margin-right: 0.5rem; flex-shrink: 0;"></i>
                <p style="font-size: 0.875rem; color: var(--text-dark); margin: 0;">191 Bà Triệu, Hai Bà Trưng, Hà Nội</p>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                    <span style="font-size: 0.875rem; color: var(--text-dark);">8 phòng chiếu</span>
                </div>
                <span style="font-size: 0.75rem; color: var(--text-light);">2024-01-15</span>
            </div>
        </div>

        <div style="padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <button class="btn-primary w-100">Xem chi tiết</button>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon" style="width: 48px; height: 48px; margin-right: 1rem;">
                    <i class="fas fa-building"></i>
                </div>
                <div>
                    <h3 style="font-size: 1.125rem; font-weight: 600; color: var(--primary-dark); margin-bottom: 0.25rem;">CGV Landmark 81</h3>
                    <p style="font-size: 0.875rem; color: var(--text-light); margin: 0;">ID: 2</p>
                </div>
            </div>
            <div class="action-buttons">
                <button class="action-btn view" title="Xem">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="action-btn edit" title="Sửa">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="action-btn delete" title="Xóa">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>

        <div style="margin-bottom: 1rem;">
            <div class="d-flex align-items-start mb-2">
                <i class="fas fa-map-marker-alt" style="color: var(--text-light); margin-top: 0.25rem; margin-right: 0.5rem; flex-shrink: 0;"></i>
                <p style="font-size: 0.875rem; color: var(--text-dark); margin: 0;">Tầng 5, Vincom Landmark 81, Quận 1, TP.HCM</p>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                    <span style="font-size: 0.875rem; color: var(--text-dark);">12 phòng chiếu</span>
                </div>
                <span style="font-size: 0.75rem; color: var(--text-light);">2024-01-10</span>
            </div>
        </div>

        <div style="padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <button class="btn-primary w-100">Xem chi tiết</button>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon" style="width: 48px; height: 48px; margin-right: 1rem;">
                    <i class="fas fa-building"></i>
                </div>
                <div>
                    <h3 style="font-size: 1.125rem; font-weight: 600; color: var(--primary-dark); margin-bottom: 0.25rem;">Lotte Cinema Diamond</h3>
                    <p style="font-size: 0.875rem; color: var(--text-light); margin: 0;">ID: 3</p>
                </div>
            </div>
            <div class="action-buttons">
                <button class="action-btn view" title="Xem">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="action-btn edit" title="Sửa">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="action-btn delete" title="Xóa">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>

        <div style="margin-bottom: 1rem;">
            <div class="d-flex align-items-start mb-2">
                <i class="fas fa-map-marker-alt" style="color: var(--text-light); margin-top: 0.25rem; margin-right: 0.5rem; flex-shrink: 0;"></i>
                <p style="font-size: 0.875rem; color: var(--text-dark); margin: 0;">34 Lê Duẩn, Quận 1, TP.HCM</p>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                    <span style="font-size: 0.875rem; color: var(--text-dark);">6 phòng chiếu</span>
                </div>
                <span style="font-size: 0.75rem; color: var(--text-light);">2024-01-05</span>
            </div>
        </div>

        <div style="padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <button class="btn-primary w-100">Xem chi tiết</button>
        </div>
    </div>
</div>

<!-- Theaters Table -->
<div class="admin-card">
    <div style="padding: 1.5rem 1.5rem 1rem 1.5rem; border-bottom: 1px solid var(--border-color);">
        <h3 style="font-size: 1.125rem; font-weight: 500; color: var(--primary-dark); margin: 0;">Danh sách Theaters</h3>
    </div>
    <div class="admin-table" style="margin: 0;">
        <table class="w-100">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên rạp</th>
                    <th>Địa chỉ</th>
                    <th>Số phòng</th>
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var theater in Model)
                {
                    <tr>
                        <td>@theater.TheaterId</td>
                        <td style="font-weight: 500;">@theater.TheaterName</td>
                        <td>@theater.Location</td>
                        <td>@theater.Auditoria.Count()</td>
                        <td>@theater.CreatedAt</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" title="Xem">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="action-btn edit" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Theaters", new { page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
    </div>
</div>

<!-- Add Theater Modal -->
<div id="addTheaterModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Thêm Theater mới</h2>
        </div>
        <form>
            <div class="form-group">
                <label class="form-label">Tên rạp</label>
                <input type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Địa chỉ</label>
                <textarea class="form-control" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label class="form-label">Số phòng chiếu</label>
                <input type="number" min="1" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Map URL (tùy chọn)</label>
                <input type="url" class="form-control">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideModal('addTheaterModal')">Hủy</button>
                <button type="submit" class="btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>
