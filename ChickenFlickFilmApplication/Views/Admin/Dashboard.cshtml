@model ChickenFlickFilmApplication.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutAdmin";
}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Tổng quan hệ thống quản lý rạp chiếu phim</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-3 mb-3">
    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.TotalUsers</div>
                <div class="stat-label">Tổng Users</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.TotalMovies</div>
                <div class="stat-label">Tổng Movies</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-film"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.TotalShowtimes</div>
                <div class="stat-label">Tổng suất chiếu</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.TotalTheaters</div>
                <div class="stat-label">Rạp phim</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-building"></i>
            </div>
        </div>

    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.TotalAuditoriums</div>
                <div class="stat-label">Phòng chiếu</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-couch"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="stat-value">@Model.MonthlyRevenue VND</div>
                <div class="stat-label">Doanh thu</div>
            </div>
            <div class="stat-icon">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
    </div>
</div>