@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutAdmin";
}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Tổng quan hệ thống quản lý rạp chiếu phim</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-3 mb-3">
    <div class="stat-card">
