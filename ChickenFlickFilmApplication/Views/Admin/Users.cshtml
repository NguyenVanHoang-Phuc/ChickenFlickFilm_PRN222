@model X.PagedList.IPagedList<BusinessObjects.Models.User>
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Quản lý Users";
    Layout = "_LayoutAdmin";
}
<link href="~/css/ModalStyle.css rel="stylesheet" />
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Quản lý Users</h1>
        <p class="page-subtitle">Quản lý thông tin người dùng trong hệ thống</p>
    </div>
</div>

<!-- Search and Filters -->
<div class="admin-card">
    <form asp-action="SearchUser" method="post">
    <div class="d-flex align-items-center" style="gap: 1rem;">
        <div class="search-container" style="flex: 1;">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="form-control search-input" placeholder="Tìm kiếm theo tên hoặc email..." id="searchInput" name="searchKeyUser">
        </div>
        <select class="form-control form-select" style="width: auto;" name="role">
            <option value="">Tất cả vai trò</option>
            <option value="Admin">Admin</option>
            <option value="FilmManager">Film Manager</option>
            <option value="Customer">Customer</option>
        </select>
            <input type="submit" class="btn btn-primary mt-2" value="Tìm kiếm" style="width: 20%;">
    </div>
    </form>
</div>

<!-- Users Table -->
<div class="admin-table">
    <table class="w-100">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Giới tính</th>
                <th>SĐT</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count == 0)
            {
                <tr>
                    <td colspan="8" class="text-center">Không có người dùng nào.</td>
                </tr>
            }

            @foreach (var user in Model)  
            {
                <tr>
                    <td>@user.UserId</td>
                    <td style="font-weight: 500;">@user.FullName</td>
                    <td>@user.Email</td>
                    <td><span class="badge @(user.Role == "Admin" ? "badge-warning" : user.Role == "FilmManager" ? "badge-info" : "badge-secondary")">@user.Role</span></td>
                    <td>@(user.Gender ? "Nam" : "Nữ")</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.CreatedAt?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn edit" title="Sửa" onclick="showEditModal(@user.UserId)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete" title="Xóa" onclick="confirmDelete(@user.UserId)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Users", new { page }),
    new PagedListRenderOptions
    {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>

<!-- Modal -->
<div class="modal fade" id="accountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="modalContent" style="max-width:none; width:100%">
            <!-- Content loaded via AJAX -->
        </div>
    </div>
</div>


@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        const toastLive = document.getElementById('successToast');
        const toast = new bootstrap.Toast(toastLive);
        toast.show();
    </script>
}

@section Scripts {
    <script>
        function showEditModal(id) {
            $.get('/Admin/GetEditUserModal/' + id, function (data) {
                $('#modalContent').html(data);
                new bootstrap.Modal(document.getElementById('accountModal')).show();
            });
        }

        function confirmDelete(id) {
            $.get('/Admin/GetDeleteUserModal/' + id, function (data) {
                $('#modalContent').html(data);
                new bootstrap.Modal(document.getElementById('accountModal')).show();
            });
        }
    </script>
}