@model IEnumerable<BusinessObjects.Models.User> 

@{
    ViewData["Title"] = "Quản lý Users";
    Layout = "_LayoutAdmin";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Quản lý Users</h1>
        <p class="page-subtitle">Quản lý thông tin người dùng trong hệ thống</p>
    </div>
    <button class="btn-primary" onclick="showModal('addUserModal')">
        <i class="fas fa-plus"></i>
        Thêm User
    </button>
</div>

<!-- Search and Filters -->
<div class="admin-card">
    <div class="d-flex align-items-center" style="gap: 1rem;">
        <div class="search-container" style="flex: 1;">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="form-control search-input" placeholder="Tìm kiếm theo tên hoặc email..." id="searchInput">
        </div>
        <select class="form-control form-select" style="width: auto;">
            <option value="">Tất cả vai trò</option>
            <option value="Admin">Admin</option>
            <option value="FilmManager">Film Manager</option>
            <option value="Customer">Customer</option>
        </select>
    </div>
</div>

<!-- Users Table -->
<div class="admin-table">
    <table class="w-100">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Giới tính</th>
                <th>SĐT</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)  
            {
                <tr>
                    <td>@user.UserId</td>
                    <td style="font-weight: 500;">@user.FullName</td>
                    <td>@user.Email</td>
                    <td><span class="badge @(user.Role == "Admin" ? "badge-warning" : user.Role == "FilmManager" ? "badge-info" : "badge-secondary")">@user.Role</span></td>
                    <td>@(user.Gender ? "Nam" : "Nữ")</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.CreatedAt?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn view" title="Xem">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="action-btn edit" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="pagination">
    <div class="pagination-info">
        Hiển thị <strong>1</strong> đến <strong>3</strong> của <strong>3</strong> kết quả
    </div>
    <div class="pagination-controls">
        <a href="#" class="pagination-btn">Trước</a>
        <a href="#" class="pagination-btn active">1</a>
        <a href="#" class="pagination-btn">Sau</a>
    </div>
</div>

<!-- Add User Modal -->
<div id="addUserModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Thêm User mới</h2>
        </div>
        <form>
            <div class="form-group">
                <label class="form-label">Họ tên</label>
                <input type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Vai trò</label>
                <select class="form-control form-select">
                    <option value="Customer">Customer</option>
                    <option value="FilmManager">Film Manager</option>
                    <option value="Affiliates">Affiliates</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Số điện thoại</label>
                <input type="tel" class="form-control" required>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideModal('addUserModal')">Hủy</button>
                <button type="submit" class="btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>
