@{
    ViewData["Title"] = "Quản lý Showtimes";
    Layout = "_LayoutAdmin";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Quản lý Showtimes</h1>
        <p class="page-subtitle">Quản lý lịch chiếu phim trong hệ thống</p>
    </div>
    <button class="btn-primary" onclick="showModal('addShowtimeModal')">
        <i class="fas fa-plus"></i>
        Thêm Showtime
    </button>
</div>

<!-- Search and Filters -->
<div class="admin-card">
    <div class="d-flex align-items-center" style="gap: 1rem;">
        <div class="search-container" style="flex: 1;">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="form-control search-input" placeholder="Tìm kiếm theo tên phim hoặc rạp...">
        </div>
        <div style="position: relative;">
            <i class="fas fa-calendar-alt" style="position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); color: var(--text-light);"></i>
            <input type="date" class="form-control" style="padding-left: 2.5rem;">
        </div>
        <select class="form-control form-select" style="width: auto;">
            <option value="">Tất cả trạng thái</option>
            <option value="Sắp chiếu">Sắp chiếu</option>
            <option value="Đang chiếu">Đang chiếu</option>
            <option value="Đã chiếu">Đã chiếu</option>
        </select>
    </div>
</div>

<!-- Showtimes Table -->
<div class="admin-table">
    <table class="w-100">
        <thead>
            <tr>
                <th>ID</th>
                <th>Phim</th>
                <th>Rạp</th>
                <th>Phòng chiếu</th>
                <th>Ngày chiếu</th>
                <th>Giờ chiếu</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td style="font-weight: 500;">Avatar: The Way of Water</td>
                <td>CGV Vincom</td>
                <td>Phòng A1</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-alt" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        2024-01-20
                    </div>
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        14:30
                    </div>
                </td>
                <td><span class="badge badge-info">Sắp chiếu</span></td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td style="font-weight: 500;">Dune: Part Two</td>
                <td>CGV Landmark</td>
                <td>Phòng B2</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-alt" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        2024-01-20
                    </div>
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        19:45
                    </div>
                </td>
                <td><span class="badge badge-success">Đang chiếu</span></td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>3</td>
                <td style="font-weight: 500;">Spider-Man: No Way Home</td>
                <td>Lotte Cinema</td>
                <td>Phòng C1</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-alt" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        2024-01-21
                    </div>
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock" style="color: var(--text-light); margin-right: 0.5rem;"></i>
                        21:00
                    </div>
                </td>
                <td><span class="badge badge-secondary">Đã chiếu</span></td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="pagination">
    <div class="pagination-info">
        Hiển thị <strong>1</strong> đến <strong>3</strong> của <strong>3</strong> kết quả
    </div>
    <div class="pagination-controls">
        <a href="#" class="pagination-btn">Trước</a>
        <a href="#" class="pagination-btn active">1</a>
        <a href="#" class="pagination-btn">Sau</a>
    </div>
</div>

<!-- Add Showtime Modal -->
<div id="addShowtimeModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Thêm Showtime mới</h2>
        </div>
        <form>
            <div class="form-group">
                <label class="form-label">Phim</label>
                <select class="form-control form-select" required>
                    <option value="">Chọn phim</option>
                    <option value="1">Avatar: The Way of Water</option>
                    <option value="2">Dune: Part Two</option>
                    <option value="3">Spider-Man: No Way Home</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Phòng chiếu</label>
                <select class="form-control form-select" required>
                    <option value="">Chọn phòng chiếu</option>
                    <option value="1">CGV Vincom - Phòng A1</option>
                    <option value="2">CGV Landmark - Phòng B2</option>
                    <option value="3">Lotte Cinema - Phòng C1</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Ngày chiếu</label>
                <input type="date" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Giờ chiếu</label>
                <input type="time" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Trạng thái</label>
                <select class="form-control form-select">
                    <option value="Sắp chiếu">Sắp chiếu</option>
                    <option value="Đang chiếu">Đang chiếu</option>
                    <option value="Đã chiếu">Đã chiếu</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideModal('addShowtimeModal')">Hủy</button>
                <button type="submit" class="btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>
