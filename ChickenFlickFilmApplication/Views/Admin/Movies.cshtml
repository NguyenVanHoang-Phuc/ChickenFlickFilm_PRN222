@{
    ViewData["Title"] = "Quản lý Phim";
    Layout = "_LayoutAdmin";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Quản lý Phim</h1>
        <p class="page-subtitle">Quản lý thông tin phim trong hệ thống</p>
    </div>
    <button class="btn-primary" onclick="showModal('addMovieModal')">
        <i class="fas fa-plus"></i>
        Thêm Movie
    </button>
</div>

<!-- Search and Filters -->
<div class="admin-card">
    <div class="d-flex align-items-center" style="gap: 1rem;">
        <div class="search-container" style="flex: 1;">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="form-control search-input" placeholder="Tìm kiếm theo tên phim hoặc thể loại...">
        </div>
        <select class="form-control form-select" style="width: auto;">
            <option value="">Tất cả trạng thái</option>
            <option value="Đang chiếu">Đang chiếu</option>
            <option value="Sắp chiếu">Sắp chiếu</option>
        </select>
        <select class="form-control form-select" style="width: auto;">
            <option value="">Tất cả định dạng</option>
            <option value="2D">2D</option>
            <option value="3D">3D</option>
            <option value="IMAX">IMAX</option>
        </select>
    </div>
</div>

<!-- Movies Table -->
<div class="admin-table">
    <table class="w-100">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên phim</th>
                <th>Thể loại</th>
                <th>Thời lượng</th>
                <th>Đánh giá</th>
                <th>Trạng thái</th>
                <th>Định dạng</th>
                <th>Đạo diễn</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>
                    <div style="font-weight: 500;">Avatar: The Way of Water</div>
                    <div style="font-size: 0.875rem; color: var(--text-light);">2024-01-15 - 2024-03-15</div>
                </td>
                <td>Sci-Fi, Adventure</td>
                <td>192 phút</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-star" style="color: #fbbf24; margin-right: 0.25rem;"></i>
                        <span style="font-weight: 500;">8.5</span>
                    </div>
                </td>
                <td><span class="badge badge-success">Đang chiếu</span></td>
                <td>3D</td>
                <td>James Cameron</td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>
                    <div style="font-weight: 500;">Dune: Part Two</div>
                    <div style="font-size: 0.875rem; color: var(--text-light);">2024-02-01 - 2024-04-01</div>
                </td>
                <td>Sci-Fi, Drama</td>
                <td>166 phút</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-star" style="color: #fbbf24; margin-right: 0.25rem;"></i>
                        <span style="font-weight: 500;">9.2</span>
                    </div>
                </td>
                <td><span class="badge badge-success">Đang chiếu</span></td>
                <td>IMAX</td>
                <td>Denis Villeneuve</td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>3</td>
                <td>
                    <div style="font-weight: 500;">Spider-Man: No Way Home</div>
                    <div style="font-size: 0.875rem; color: var(--text-light);">2024-03-01 - 2024-05-01</div>
                </td>
                <td>Action, Adventure</td>
                <td>148 phút</td>
                <td>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-star" style="color: #fbbf24; margin-right: 0.25rem;"></i>
                        <span style="font-weight: 500;">8.8</span>
                    </div>
                </td>
                <td><span class="badge badge-info">Sắp chiếu</span></td>
                <td>2D</td>
                <td>Jon Watts</td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view" title="Xem">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="pagination">
    <div class="pagination-info">
        Hiển thị <strong>1</strong> đến <strong>3</strong> của <strong>3</strong> kết quả
    </div>
    <div class="pagination-controls">
        <a href="#" class="pagination-btn">Trước</a>
        <a href="#" class="pagination-btn active">1</a>
        <a href="#" class="pagination-btn">Sau</a>
    </div>
</div>

<!-- Add Movie Modal -->
<div id="addMovieModal" class="modal-overlay" style="display: none;">
    <div class="modal-content" style="max-width: 600px;">
        <div class="modal-header">
            <h2 class="modal-title">Thêm Movie mới</h2>
        </div>
        <form>
            <div class="grid grid-cols-2" style="gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Tên phim</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Thể loại</label>
                    <input type="text" class="form-control" required>
                </div>
            </div>
            <div class="grid grid-cols-2" style="gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Thời lượng (phút)</label>
                    <input type="number" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Đánh giá</label>
                    <input type="number" step="0.1" min="0" max="10" class="form-control" required>
                </div>
            </div>
            <div class="grid grid-cols-2" style="gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Ngày khởi chiếu</label>
                    <input type="date" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Ngày kết thúc</label>
                    <input type="date" class="form-control" required>
                </div>
            </div>
            <div class="grid grid-cols-3" style="gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-control form-select">
                        <option value="Sắp chiếu">Sắp chiếu</option>
                        <option value="Đang chiếu">Đang chiếu</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Định dạng</label>
                    <select class="form-control form-select">
                        <option value="2D">2D</option>
                        <option value="3D">3D</option>
                        <option value="IMAX">IMAX</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Ngôn ngữ</label>
                    <select class="form-control form-select">
                        <option value="Phụ đề">Phụ đề</option>
                        <option value="Lồng tiếng">Lồng tiếng</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Đạo diễn</label>
                <input type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Mô tả</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideModal('addMovieModal')">Hủy</button>
                <button type="submit" class="btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>

