@page
@model ChickenFlickFilmApplication.Views.Payment.BookingDetailsModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        .container-fluid {
            width: 100vw;
            height: 100vh;
            background: #3c5077;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn {
            padding: 10px 60px;
            background: #6fd649;
            border: 0;
            outline: none;
            cursor: pointer;
            font-size: 22px;
            font-weight: 500;
            border-radius: 30px;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            visibility: hidden;
            transition: opacity 0.4s ease;
        }

            .overlay.active {
                visibility: visible;
            }

        .popup {
            width: 400px;
            background: #fff;
            border-radius: 6px;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.1);
            text-align: center;
            padding: 0 30px 30px;
            color: #333;
            opacity: 1;
            visibility: hidden;
            transition: transform 0.4s, top 0.4s;
        }

            .popup.active {
                visibility: visible;
                top: 50%;
                transform: translate(-50%, -50%) scale(1);
            }

        .close-button button {
            margin-top: 200px;
            margin-left: 1000px;
            background: none;
            border: none;
        }

        .close-button img {
            width: 30px;
        }

        .ticket-information h5 {
            padding-top: 40px;
            padding-bottom: 20px;
        }

        .ticket-information div {
            text-align: left;
        }

        .ticket-information .left {
            display: flex;
            align-items: center;
        }

        .ticket-information .right {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 15px;
        }

        .dashed-line {
            border: 1px dashed grey;
            width: 100%;
            margin-left: 5px;
            margin-bottom: 10px;
        }

        #checkbox {
            margin-top: 7px;
        }


        .make-payment button {
            width: 100%;
            margin-top: 10px;
            padding: 10px 0;
            background: #6fd649;
            color: #fff;
            border: 0;
            outline: none;
            font-size: 18px;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
        }

            .make-payment button:disabled {
                background-color: #ccc;
                cursor: not-allowed;
            }
    </style>
</head>

<body>
    <div class="container-fluid">
        <button type="submit" class="btn" onclick="openPopup()">Thanh toán</button>
        <div class="overlay" id="overlay">
            <div class="close-button">
                <button type="button" onclick="closePopup()">
                    <img src="images/close-button.png" alt="close-button">
                </button>
            </div>
            <div class="popup" id="popup">
                <div class="ticket-information">
                    <h5><b>THÔNG TIN ĐẶT VÉ</b></h5>
                    <div class="row">
                        <div class="col-2 left" style="color: #8E1616;"><b>Phim</b></div>
                        <div class="col-10 right"><b>Bí Kíp Luyện Rồng</b></div>
                    </div>
                    <div class="row">
                        <div class="col-2 left" style="color: #8E1616;"><b>Rạp</b></div>
                        <div class="col-10 right">
                            <div class="theater-name"><b>Galaxy Tân Bình</b></div>
                            <div class="showtime"><i>14:45 - Thứ Năm, 26/06/2025</i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2 left"></div>
                        <div class="col-10 right">
                            <div class="room-name">RAP 5</div>
                            <div class="seat-code">Người lớn - Member 14</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2 left" style="color: #8E1616;"><b>Tổng</b></div>
                        <div class="col-10 right" style="font-size: 18px;"><b>75.000 VNĐ</b></div>
                    </div>
                </div>
                <div class="dashed-line"></div>
                <div class="confirmation">
                    <div class="row">
                        <div class="col-11">
                            <label for="agreeCheckbox">
                                Tôi xác nhận thông tin đặt vé đã chính xác.
                            </label>
                        </div>
                        <div class="col-1"><input type="checkbox" id="agreeCheckbox" onchange="toggleButton()"></div>
                    </div>
                </div>
                <div class="make-payment">
                    <button type="button" id="payment-button" onclick="closePopup()" disabled>Thanh toán</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        function openPopup() {
            overlay.classList.add("active");
            popup.classList.add("active");

        }
        function closePopup() {
            overlay.classList.remove("active");
            popup.classList.remove("active");
        }
        function toggleButton() {
            let checkbox = document.getElementById("agreeCheckbox");
            let button = document.getElementById("payment-button");
            button.disabled = !checkbox.checked;
        }
    </script>
</body>

</html>