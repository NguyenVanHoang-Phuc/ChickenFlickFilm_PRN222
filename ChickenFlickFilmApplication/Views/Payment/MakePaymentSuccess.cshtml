@page
@model ChickenFlickFilmApplication.Views.Payment.MakePaymentSuccessModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        .container-fluid {
            width: 100vw;
            height: 100vh;
            background: #3c5077;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn {
            padding: 10px 60px;
            background: #6fd649;
            border: 0;
            outline: none;
            cursor: pointer;
            font-size: 22px;
            font-weight: 500;
            border-radius: 30px;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            visibility: hidden;
            transition: opacity 0.4s ease;
        }

            .overlay.active {
                visibility: visible;
            }

        .popup {
            width: 400px;
            background: #fff;
            border-radius: 6px;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.1);
            text-align: center;
            padding: 0 30px 30px;
            color: #333;
            opacity: 1;
            visibility: hidden;
            transition: transform 0.4s, top 0.4s;
        }

            .popup.active {
                visibility: visible;
                top: 50%;
                transform: translate(-50%, -50%) scale(1);
            }


            .popup img {
                width: 100px;
                margin-top: -50px;
                border-radius: 50%;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            }

            .popup h2 {
                font-size: 38px;
                font-weight: 500;
                margin: 30px 0 10px;
            }

            .popup button {
                width: 100%;
                margin-top: 10px;
                padding: 10px 0;
                background: #6fd649;
                color: #fff;
                border: 0;
                outline: none;
                font-size: 18px;
                border-radius: 4px;
                cursor: pointer;
                box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>

<body>
    <div class="container-fluid">
        <button type="submit" class="btn" onclick="openPopup()">Thanh toán</button>
        <div class="overlay" id="overlay">
            <div class="popup" id="popup">
                <img src="images/tick.jpg" alt="tick">
                <h2>Thành công!</h2>
                <p>Bạn đã thanh toán thành công.</p>
                <button style="background: #8E1616 " id="downloadBtn" class="mt-4" type="submit">Nhận vé điện tử</button>
                <button style="background: #fff; color: #333 " type="button" onclick="closePopup(); goHome();">Đóng</button>
            </div>
        </div>
    </div>


    <script>

        let popup = document.getElementById("popup");
        let overlay = document.getElementById("overlay");
        function openPopup() {
            overlay.classList.add("active");
            popup.classList.add("active");

        }
        function closePopup() {
            overlay.classList.remove("active");
            popup.classList.remove("active");
        }
        function goHome() {
            window.location.href = "/";
        }


        //download E-ticket( generated dynamically on the Server)
        document.getElementById('downloadBtn').addEventListener('click', function () {
            fetch('/generate-pdf', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ orderId: 1234 }) // Send dynamic data
            })
                .then(res => res.blob()) // Convert to binary
                .then(blob => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'receipt.pdf';
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                    window.URL.revokeObjectURL(url);
                })
                .catch(err => console.error('Download failed:', err));
        });

    </script>
</body>

</html>