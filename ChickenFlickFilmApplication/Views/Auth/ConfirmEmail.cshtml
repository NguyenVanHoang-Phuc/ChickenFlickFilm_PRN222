@{
    ViewData["Title"] = "Kích Hoạt Tài Khoản - CHICKEN FLICKS FILM";
    Layout = null;
}
@model ConfirmEmailViewModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f5f5f5;
            height: 100vh;
            display: flex;
        }

        .left-panel {
            background-color: #B91C1C;
            width: 60%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            position: relative;
        }

        .logo {
            width: 120px;
            height: 120px;
            margin-bottom: 30px;
        }

        .company-name {
            font-size: 2.5rem;
            font-weight: bold;
            letter-spacing: 2px;
            text-align: center;
            line-height: 1.2;
        }

        .right-panel {
            width: 40%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f5f5f5;
            position: relative;
        }

        .form-container {
            background-color: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 400px;
            max-width: 90%;
            position: relative;
        }

        .close-btn {
            position: absolute;
            top: 15px;
            right: 20px;
            background: none;
            border: none;
            font-size: 18px;
            color: #999;
            cursor: pointer;
            padding: 5px;
        }

            .close-btn:hover {
                color: #666;
            }

        .form-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            display: block;
        }

        .form-title {
            text-align: center;
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        .form-description {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #666;
            font-weight: 500;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

            .form-input:focus {
                outline: none;
                border-color: #3b82f6;
            }

        .code-input {
            text-align: center;
            font-size: 20px;
            font-weight: 600;
            letter-spacing: 8px;
            text-transform: uppercase;
            font-family: 'Courier New', monospace;
        }

        .submit-btn {
            width: 100%;
            padding: 14px;
            background-color: #f97316;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .submit-btn:hover {
                background-color: #ea580c;
            }

        .resend-link {
            text-align: center;
            margin-top: 20px;
        }

            .resend-link a {
                color: #3b82f6;
                text-decoration: none;
                font-size: 14px;
            }

                .resend-link a:hover {
                    text-decoration: underline;
                }

        .email-info {
            background-color: #f0f9ff;
            border: 1px solid #bfdbfe;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            font-size: 14px;
            color: #1e40af;
        }

        @@media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .left-panel {
                width: 100%;
                height: 40vh;
            }

            .right-panel {
                width: 100%;
                height: 60vh;
            }

            .company-name {
                font-size: 2rem;
            }

            .form-container {
                width: 90%;
                padding: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="left-panel">
        <img src="~/images/logo.png" alt="Six Chickens Films Logo" class="logo" />
        <h1 class="company-name">SIX CHICKENS FILMS</h1>
    </div>

    <div class="right-panel">
        <div class="form-container">
            <button class="close-btn" type="button" onclick="window.history.back()">×</button>

            <img src="~/images/logo.png" alt="CHICKEN FLICKS FILM" class="form-logo" />

            <h2 class="form-title">Kích Hoạt Tài Khoản</h2>

            <p class="form-description">
                Vui lòng nhập mã kích hoạt đã được gửi đến email của bạn.
            </p>

            <div class="email-info">
                📧 Mã kích hoạt đã được gửi đến: <strong>@Model?.Email</strong>
            </div>

            <form method="post" asp-action="ConfirmEmailAsync" asp-controller="Auth">
                <input type="hidden" asp-for="Email" value="@Model.Email" />
                <input type="hidden" asp-for="Code" value="@Model.Code" />

                <div class="form-group">
                    <label class="form-label" for="activationCode">Mã Kích Hoạt</label>
                    <input type="text"
                           id="activationCode"
                           name="activationCode"
                           class="form-input code-input"
                           required
                           asp-for="CodeEnter"
                           placeholder="CF-12345..." />
                    <span asp-validation-for="CodeEnter" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-btn">
                    KÍCH HOẠT TÀI KHOẢN
                </button>
            </form>

            <div class="resend-link">
                <a href="@Url.Action("ResendConfirmationEmail", "Auth", new { email = Model.Email })">Không nhận được mã? Gửi lại</a>
            </div>
        </div>
    </div>

    <script>
        // Auto-focus on the activation code input
        document.getElementById('activationCode').focus();
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>