@model UserProfileViewModel

<div class="container-fluid" style="background-color: #f5f5f5; min-height: 100vh; padding: 20px;">
    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="profile-image mb-3">
                        <div class="rounded-circle bg-dark d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; margin: 0 auto;">
                            <i class="fas fa-camera text-white" style="font-size: 24px;"></i>
                        </div>
                    </div>
                    <h6 class="mb-1">@(Model?.FullName ?? "Nguyễn Văn A")</h6>
                    <div class="mt-3">
                        <p class="mb-1"><strong>Tổng chi tiêu năm 2025:</strong></p>
                        <p class="text-muted">@(Model?.TotalSpending.ToString("N0") ?? "0") VND</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <ul class="nav nav-tabs card-header-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab">
                                Lịch sử giao dịch
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link text-danger" id="personal-tab" data-bs-toggle="tab" data-bs-target="#personal" type="button" role="tab">
                                Thông tin cá nhân
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="promotions-tab" data-bs-toggle="tab" data-bs-target="#promotions" type="button" role="tab">
                                Khuyến mãi
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="history" role="tabpanel">
                            <!-- Transaction History Content -->
                            <p class="text-muted">Lịch sử giao dịch sẽ hiển thị tại đây...</p>
                        </div>

                        <div class="tab-pane fade" id="personal" role="tabpanel">
                            <!-- Personal Information Form -->
                            <form asp-action="UpdateProfile" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="fullName" class="form-label">Họ và Tên</label>
                                            <input type="text" class="form-control" id="fullName" asp-for="FullName" placeholder="Nhập họ và tên">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="birthDate" class="form-label">Ngày sinh</label>
                                            <input type="date" class="form-control" id="birthDate" asp-for="DateOfBirth">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Nhập email">
                                            <small class="text-danger">Thay đổi</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="phoneNumber" class="form-label">Số điện thoại</label>
                                            <input type="tel" class="form-control" id="phoneNumber" asp-for="PhoneNumber" placeholder="Nhập số điện thoại">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Giới tính</label>
                                            <div class="d-flex gap-3">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="Gender" id="male" value="Nam" @(Model?.Gender == "Nam" ? "checked" : "")>
                                                    <label class="form-check-label" for="male">
                                                        Nam
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="Gender" id="female" value="Nữ" @(Model?.Gender == "Nữ" ? "checked" : "")>
                                                    <label class="form-check-label" for="female">
                                                        Nữ
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Mật khẩu</label>
                                            <input type="password" class="form-control" id="password" name="Password" placeholder="Nhập mật khẩu">
                                            <small class="text-danger">Thay đổi</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" class="btn btn-danger px-4">Cập nhật</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="promotions" role="tabpanel">
                            <!-- Promotions Content -->
                            <p class="text-muted">Thông tin khuyến mãi sẽ hiển thị tại đây...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tabs
        var triggerTabList = [].slice.call(document.querySelectorAll('button[data-bs-toggle="tab"]'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })
    </script>
}

@section Styles {
    <style>
        .profile-image {
            position: relative;
        }

        .nav-tabs .nav-link {
            color: #6c757d;
            border: none;
            border-bottom: 2px solid transparent;
            padding: 15px 20px;
        }

            .nav-tabs .nav-link.active {
                color: #dc3545;
                border-bottom-color: #dc3545;
                background-color: transparent;
            }

            .nav-tabs .nav-link:hover {
                border-bottom-color: #dc3545;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #dee2e6;
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: #dc3545;
                box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            border-radius: 8px;
            padding: 10px 20px;
        }

        .card {
            border: none;
            border-radius: 12px;
        }

        .card-header {
            border-bottom: 1px solid #dee2e6;
        }

        .form-check-input:checked {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .text-danger {
            color: #dc3545 !important;
        }
    </style>
}