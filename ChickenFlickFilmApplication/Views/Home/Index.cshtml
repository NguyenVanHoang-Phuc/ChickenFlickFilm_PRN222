@{
    ViewData["Title"] = "CHICKEN FLICK FILM - Trang Chủ";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prn222clone.styles.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .hero-section {
            position: relative;
            height: 400px;
            background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400"><defs><pattern id="ice" patternUnits="userSpaceOnUse" width="100" height="100"><rect fill="%23e6f3ff"/><circle cx="20" cy="20" r="2" fill="%23b3d9ff"/><circle cx="60" cy="40" r="1.5" fill="%23cce7ff"/><circle cx="40" cy="70" r="2.5" fill="%23b3d9ff"/></pattern></defs><rect width="100%" height="100%" fill="url(%23ice)"/></svg>');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

        .hero-content h1 {
            font-size: 4rem;
            font-weight: bold;
            letter-spacing: 0.2em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        }

        .hero-content .subtitle {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .hero-content .release-date {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffcc00;
        }

        .main-content {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .movies-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .movie-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }

            .movie-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.2);
            }

        .movie-poster {
            width: 100%;
            height: 280px;
            background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 14px;
            text-align: center;
        }

        .movies-section h2 {
            color: #333;
            margin-bottom: 30px;
            font-size: 1.8rem;
            border-left: 4px solid #c41e3a;
            padding-left: 15px;
        }

        .showing-times {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 50px;
        }

        .time-slots {
            display: flex;
            gap: 15px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .time-slot {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 10px 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .time-slot:hover {
                border-color: #c41e3a;
                background: #c41e3a;
                color: white;
            }

        .reviews-section {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 50px;
        }

        .review-item {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }

            .review-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

        .review-image {
            width: 80px;
            height: 80px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            border-radius: 8px;
            flex-shrink: 0;
        }

        .review-content h4 {
            color: #c41e3a;
            margin-bottom: 5px;
        }

        @@media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2.5rem;
            }

            .movies-grid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 20px;
            }
        }
    </style>
</head>

<body>
    <section class="hero-section">
        <div class="hero-content">
            <h1>INTERSTELLAR</h1>
            <p class="subtitle">ĐỘC QUYỀN ĐỊNH DẠNG IMAX</p>
            <p class="release-date">KHỞI CHIẾU 28.02.2025</p>
        </div>
    </section>

    <main class="main-content">
        <section class="movies-section">
            <h2>🎬 PHIM</h2>
            <div class="movies-grid">
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #ff6b6b, #ffa500);">
                        Nụ Hôn Bạc Tỷ
                    </div>
                </div>
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #4ecdc4, #44a08d);">
                        Nhà Giả Tiên
                    </div>
                </div>
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #667eea, #764ba2);">
                        Flow
                    </div>
                </div>
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #f093fb, #f5576c);">
                        Bí Kíp Luyện Rồng
                    </div>
                </div>
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #ffecd2, #fcb69f);">
                        Bí Kíp Luyện Rồng
                    </div>
                </div>
                <div class="movie-card">
                    <div class="movie-poster" style="background: linear-gradient(45deg, #a8edea, #fed6e3);">
                        Bí Kíp Luyện Rồng
                    </div>
                </div>
            </div>
        </section>

        <section class="showing-times">
            <h2>📅 Suất chiếu</h2>
            <p><strong>20 Phút Để</strong></p>
            <div class="time-slots">
                <div class="time-slot">17:00</div>
                <div class="time-slot">22:00</div>
            </div>

            <div style="margin-top: 30px;">
                <div style="display: flex; gap: 30px; text-align: center;">
                    <div>
                        <div style="font-weight: bold;">Hôm nay</div>
                        <div style="color: #666;">17/3</div>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Thứ 6</div>
                        <div style="color: #666;">18/3</div>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Thứ 7</div>
                        <div style="color: #666;">19/3</div>
                    </div>
                    <div>
                        <div style="font-weight: bold;">Chủ nhật</div>
                        <div style="color: #666;">20/3</div>
                    </div>
                </div>
            </div>
        </section>

        <section class="reviews-section">
            <h2>🎭 GÓC ĐIỆN ẢNH</h2>
            <div class="review-item">
                <div class="review-image"></div>
                <div class="review-content">
                    <h4>[Review] Flow: Kích bản lá thú quan trong mắt</h4>
                </div>
            </div>
            <div class="review-item">
                <div class="review-image" style="background: linear-gradient(45deg, #ff9a9e, #fecfef);"></div>
                <div class="review-content">
                    <h4>[Review] Nhà già lần</h4>
                </div>
            </div>
            <div class="review-item">
                <div class="review-image" style="background: linear-gradient(45deg, #a18cd1, #fbc2eb);"></div>
                <div class="review-content">
                    <h4>[Review] Captain America: Nôi Tiếp Đi San của Steve Rogers</h4>
                </div>
            </div>
        </section>
    </main>

    <script>
        // Add interactive functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Movie card hover effects
            const movieCards = document.querySelectorAll('.movie-card');
            movieCards.forEach(card => {
                card.addEventListener('click', function () {
                    alert('Xem chi tiết phim');
                });
            });

            // Time slot selection
            const timeSlots = document.querySelectorAll('.time-slot');
            timeSlots.forEach(slot => {
                slot.addEventListener('click', function () {
                    // Remove active class from all slots
                    timeSlots.forEach(s => s.classList.remove('active'));
                    // Add active class to clicked slot
                    this.classList.add('active');
                    this.style.background = '#c41e3a';
                    this.style.color = 'white';
                });
            });

            // Review items click
            const reviewItems = document.querySelectorAll('.review-item');
            reviewItems.forEach(item => {
                item.addEventListener('click', function () {
                    alert('Đọc review đầy đủ');
                });
                item.style.cursor = 'pointer';
            });
        });
    </script>
</body>
</html>